<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo sÃ³lido con color gris oscuro -->
    <item>
        <shape>
            <solid android:color="#121212"/>  <!-- Fondo gris oscuro -->
            <corners android:topLeftRadius="8dp" android:topRightRadius="8dp"/>  <!-- Bordes redondeados arriba -->
            <size android:height="48dp" />  <!-- Altura fija -->
        </shape>
    </item>

    <!-- Borde solo en la parte inferior -->
    <item android:left="0dp" android:right="0dp" android:top="0dp" android:bottom="0dp">
        <shape>
            <stroke
                android:color="#8A2BE2"
                android:width="0.5dp" />  <!-- Borde solo en la parte inferior -->
        </shape>
    </item>
</layer-list>
